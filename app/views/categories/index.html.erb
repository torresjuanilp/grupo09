<p id="notice"><%= notice %></p>

<h1>Categorías</h1>

<table class="table">
  <tr>
    <th>Categoría</th>
    <th>Ver Preguntas</th>
  </tr>

	<% @categories.order('name ASC').each do |c| %>
		<tr>
		<td> <%= c.name %> </td>
		<td> <%= link_to 'Ver', :action => :show, :id => c.id %> </td>
		</tr>
	<% end %>
	<tr>
		<% if user_signed_in? %>
			<td colspan="2" align="center" >
				</br>
				<%= button_to 'Nueva categoría', new_category_path , method: 'get', class: 'category' %>
			</td>
		<% end %>
	</tr>
</table>
</br>


