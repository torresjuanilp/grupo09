<p id="notice"><%= notice %></p>

<h1>Categorías</h1>

<table>
  <tr>
    <th>Categoría</th>
    <th>Ver</th>
  </tr>

  <% @categories.each do |c| %>
    <tr>
      <td> <%= c.name %> </td>
      <td> <%= link_to 'Show', :action => :show, :id => c.id %> </td>
    </tr>
  <% end %>
</table>
</br>
<% if user_signed_in? %>
	<%= button_to 'Nueva categoría', new_category_path , method: 'get', class: 'category' %>
<% end %>

<br>

