<p id="notice"><%= notice %></p>

<h2> <%= @answer.question.titulo %> </h2>

<div class="row">
	<div class="panel-body">
		<div class="panel-footer">
			<b>Respuesta de <%= @answer.user.name%> <%= @answer.user.apellido%></b><br>
			<h4><%= @answer.texto %></h4>
		</div>
	</div>
</div>
<!-- COMENTARIOS -->

	<div class="row">
		<div class="col-10 col-md-6">
  
			<% if current_user%>
				<h4> Publicar comentario </h4>
  				<%= form_tag ("/comments/new") do %>
 				<%= hidden_field_tag(:answer_id, @answer.id) %>
  				<div class="row">
    					<div class="col-md-12" style="padding-right: 100px; padding-left: 100px;">
    						<%= text_area_tag(:cuerpo,"",style: "width:200%; height:100px;",:required => true) %>
    					</div>
				</div>
    					<div class="col-md-12" style="text-align: center" >
    						<%= submit_tag("Publicar comentario", class: 'btn btn-primary', style:"margin-top:5px;") %>
   					</div>
 				 <% end %>
				</div>
		</div>
	</div>
<% end %>



</div>
</div>
