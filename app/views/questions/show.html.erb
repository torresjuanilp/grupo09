	<div class="col-md-12" style="margin-left: 10px;">

		<% if current_user%>
		<h4>   Responder </h4>
		<%= form_tag ("/answers/new") do %>
		<%= hidden_field_tag(:question_id, @question.id) %>
		<div class="row">
			<div class="col-md-8" style="padding-right: 100px; padding-left: 100px;">
